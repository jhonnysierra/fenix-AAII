<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyectofenix.escritorio.controlador.InicioControlador">
	<top>
		<MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Gestionar">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#cargarGestionarCliente" text="Cliente" />
						<MenuItem mnemonicParsing="false" onAction="#cargarGestionarEmpleado" text="Empleado" />
						<MenuItem mnemonicParsing="false" onAction="#cerrarAplicacion" text="Salir" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Prestamos">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#cargarListarPrestamos" text="Lista Prestamos" />
                  <Menu mnemonicParsing="false" text="Listar Por Tipo">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#cargarListarPrestamosConsumo" text="Consumo" />
                      <MenuItem mnemonicParsing="false" text="Personal" />
                        <MenuItem mnemonicParsing="false" text="Estudio" />
                        <MenuItem mnemonicParsing="false" text="Hipotecario" />
                    </items>
                  </Menu>
					</items>
				</Menu>
            <Menu mnemonicParsing="false" text="Bien Raiz">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#cargarListarBienRaiz" text="Lista Bien Raiz" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Pagos">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#cargarListarPagos" text="Lista Pagos" />
              </items>
            </Menu>
				<Menu mnemonicParsing="false" text="Ayuda">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#acercade" text="Acerca de te lo prestamos" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
